import Event.Event;
import Event.EventQueue;
import Event.OpenEvent;
import Event.State;
import Event.StopEvent;
import Event.Supermarket;


/**
 * @author Malte Olofsson, Oskar Dahlbeck, Filip Bergstr√∂m, Lana Abdulla
 *
 */

public class Simulator {
	private State s;
	private EventQueue eventQueue;
	private Event event;

	public Simulator(State s, EventQueue eventQueue, Event event) {
		this.s = s;
		this.eventQueue = eventQueue;
		this.event = event;
	}

	public void run() {
		eventQueue.addEvent(event);
		while (s.getActiveSim() == true) {
			Event event = eventQueue.getFirst();
			event.effekt();
		}
	}
}
